<h1>Login</h1>
<%= form_tag("/session", method: :post) do %>
  <div class="form-group">
    Username
    <input type="text" name="user_name" placeholder="Enter your username" >
  </div>
  <div class="form-group">
    <input type="hidden" name="game" value="<%= @game %>">
  </div>
  <div class="form-group">
    <button class="btn btn-primary">Log in</button>
  </div>
<% end %>